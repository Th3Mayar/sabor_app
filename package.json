{
  "name": "sabor_app",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "dev:frontend": "bun --cwd FRONTEND dev",
    "dev:backend": "bun --cwd BACKEND dev",
    "build:frontend": "bun --cwd FRONTEND build",
    "build:backend": "bun --cwd BACKEND build",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "build": "bun run build:frontend && bun run build:backend && cp -r FRONTEND/.output/* output/ && cp -r BACKEND/dist/* output/",
    "start": "concurrently \"bun --cwd FRONTEND start\" \"bun --cwd BACKEND start\""
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.6",
    "morgan": "^1.10.0"
  }
}
