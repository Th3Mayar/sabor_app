{
  "name": "sabor_app",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "dev:frontend": "bun --cwd FRONTEND dev",
    "dev:backend": "bun --cwd BACKEND dev",
    "build:frontend": "npm --prefix FRONTEND run build && bun run dev:frontend",
    "build:backend": "npm --prefix BACKEND run build",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "build": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "start:frontend": "bun --cwd FRONTEND start",
    "start:backend": "bun --cwd BACKEND start",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "install:frontend": "bun --prefix FRONTEND install",
    "install:backend": "bun --prefix BACKEND install",
    "install": "concurrently \"npm run install:frontend\" \"npm run install:backend\""
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
