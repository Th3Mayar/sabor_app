{
  "builds": [
    {
      "src": "FRONTEND/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    },
    {
      "src": "BACKEND/package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/BACKEND/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/FRONTEND/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
